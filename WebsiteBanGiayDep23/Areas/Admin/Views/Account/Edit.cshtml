@model WebsiteBanGiayDep23.Models.ApplicationUser
@{
    ViewBag.Title = "Cập nhật thông tin tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutEmpty.cshtml";
}

@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home/Index" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Account/Index" class="nav-link">Tài khoản</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Chỉnh sửa tài khoản</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Tài khoản</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Default box -->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Thêm mới tài khoản</h3>

    </div>
    <div class="card-body">
        @using (Html.BeginForm("Edit", "Account", FormMethod.Post))
        {
            @Html.ValidationSummary(false) //Hiển thị thông báo lỗi
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label>Tài khoản</label>
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @disabled = "disabled" })
            </div>
            <div class="form-group">
                <label>Họ tên</label>
                @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Email</label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Phone</label>
                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Quyền</label>
                @Html.DropDownListFor(x => x.Roles, ViewBag.Role as SelectList, "- Chọn quyền -", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Mật khẩu</label>
                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Cập nhật</button>
                <a href="/Admin/Account/Index" class="btn btn-danger">Quay lại</a>
            </div>
        }
    </div>
    <!-- /.card-body -->
    <div class="card-footer">

    </div>
    <!-- /.card-footer-->
</div>
<!-- /.card -->

@section scripts{
    <script src="~/Scripts/jsConvert.js"></script>
}

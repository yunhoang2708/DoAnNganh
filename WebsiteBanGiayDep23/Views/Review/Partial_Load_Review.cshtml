@model IEnumerable<WebsiteBanGiayDep23.Models.EF.ReviewProduct>

<div class="tab_title reviews_title">
    <h4>Reviews (@ViewBag.Count)</h4>
</div>

@if (Model != null && Model.Any())
{
    foreach (var item in Model.Take(2))
    {
        <div class="col-lg-6 reviews_col">
            <div class="tab_title reviews_title">
                <h4>Reviews</h4>
            </div>

            <!-- User Review -->

            <div class="user_review_container d-flex flex-column flex-sm-row">
                <div class="user">
                    <div class="user_pic"></div>
                    <div class="user_rating">
                        <ul class="star_rating">
                            @Html.Raw(WebsiteBanGiayDep23.Common.Common.HtmlRate(item.Rate));
                        </ul>
                    </div>
                </div>
                <div class="review">
                    <div class="review_date">@item.CreatedDate.ToString("dd MM yyyy")</div>
                    <div class="user_name">@item.FullName</div>
                    <p>@item.Content</p>
                </div>
            </div>

            <!-- User Review -->


@model WebsiteBanGiayDep23.Models.CreateAccountViewModel

@{
    ViewBag.Title = "Thông tin tài khoản";
}

<link href="~/Content/assets/styles/main_styles.css" rel="stylesheet" />
<style>
    .news_section_container {
        margin-top: 180px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="container news_section_container">
    <div class="row">
        <h2>Thông tin tài khoản</h2>
        <div class="col-md-12">
            @using (Html.BeginForm("PostProfile", "Account"))
            {
                @Html.ValidationSummary(false)
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="exampleInputEmail1">Họ tên</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="FullName" value="@Model.FullName">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Tên đăng nhập</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="UserName" value="@Model.UserName" readonly>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    <input type="email" class="form-control" aria-describedby="emailHelp" name="Email" value="@Model.Email" readonly>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Số điện thoại</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="Phone" value="@Model.Phone">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Cập nhật</button>
                </div>
            }
        </div>
    </div>
</div>

